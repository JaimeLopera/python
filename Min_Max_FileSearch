with open("file.txt","r") as file:
    words = file.read().splitlines()
    maxi = float("-inf")
    mini = float("inf")
    for i in words:
        if len(i) > maxi:
            maxi = len(i)
        if len(i) < mini:
            mini = len(i)
print("The longest word is:", maxi)
print("The shortest word is:", mini)
